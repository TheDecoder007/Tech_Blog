<form class="blog-form">
  <div class="container is-fluid createContainer">
    <h1 class="head">Create your blog</h1>
    <div class="field">
      <label class="label">Title</label>
      <div class="control">
        <input class="input" id="post-title" type="text" placeholder="Title of your blog">
      </div>
    </div>

    <div class="field">
      <label class="label">Body</label>
      <div class="control">
        <textarea class="textarea" id="post-blog-body" rows=10 type="text"
          placeholder="Write your blog here..."></textarea>
      </div>
    </div>

    <div class="field is-grouped">
      <div class="control">
        <input class="button blog-form" type="submit" value="Submit"></input>
      </div>
      <div class="control">
        <a class="button" href="/">Go Back</a>
      </div>
    </div>

  </div>

</form>



<script src="/javascript/add-post.js"></script>
