    {{!-- <section class="whole-page"> --}}
      
<section class="card-area">
        <div class="container is-fluid ">

   {{#each posts as |post|}}
          <div class="columns">
            <div class="column is-full">
                <div class="card">
              <a class="card-link" href="post/{{id}}" id={{id}}>
                  <header class="card-header cardHeader">
                    <p class="card-header-title">{{title}} by {{user.username}} on {{format_date created_at}}</p>
                  </header>

                  <div class="card-content">
                    <div class="content">{{blog_body}}</div>
                  </div>
              </a>
                </div>
            </div>
          </div>
    {{/each}}
    
        </div>
    </section>

